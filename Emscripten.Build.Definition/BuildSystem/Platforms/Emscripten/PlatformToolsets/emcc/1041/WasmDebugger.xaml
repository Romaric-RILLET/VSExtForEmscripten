<Rule
	Name="WasmDebugger"
	DisplayName="WebAssembly Debugger"
	PageTemplate="debugger"
	Description="WebAssembly Debugger options"
	xmlns="http://schemas.microsoft.com/build/2009/properties">
    
    <Rule.DataSource>
        <DataSource Persistence="UserFile"/>
    </Rule.DataSource>

    <StringProperty Name="ExecutedPage" DisplayName="実行ページ"
                Description="デバッグする Web ページ">
    </StringProperty>

    <StringProperty Name="RunServerCommandExecutable" DisplayName="サーバ実行可能ファイル"
                  Description="デバッグ中に実行する実行可能ファイル。Web サーバ などを起動します。">
    </StringProperty>

    <StringProperty Name="RunServerCommandArguments" DisplayName="サーバ実行可能ファイル コマンドライン引数"
                  Description="サーバ実行可能ファイルに渡されるコマンドライン引数">
        <Argument Property="ScriptDebuggerCommand" />
    </StringProperty>
    
    <StringProperty Name="RunWorkingDirectory" DisplayName="実行ディレクトリ"
              Description="サーバ実行可能ファイルを実行するときの、カレントディレクトリ"
              Subtype="folder"/>
</Rule>
